{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "arrowParens": "always",
  "semi": false,
  "singleQuote": false,
  "bracketSameLine": false,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always",
        "printWidth": 80
      }
    },
    {
      "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
      "options": {
        "useTabs": false
      }
    },
    // support json5
    {
      "files": "*.json5",
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve",
        "trailingComma": "all",
        "parser": "json5"
      }
    }
  ]
}
